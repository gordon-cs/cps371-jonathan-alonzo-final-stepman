<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jonathanmanos.stepman.ProfileActivity1"
    tools:showIn="@layout/activity_profile1">

    <!-- Login progress -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stepman"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/mytextview"
                android:text="\n\nWelcome, "
                android:textSize="8pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="\nYou are ready for your journey.\n"
                android:textSize="8pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Take your first step.\n\n\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mystepview"
                android:text="Steps: 0\n"
                android:textSize="20pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mylevelview"
                android:text="Level: 1"
                android:textSize="20pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="\n"
                android:textSize="5pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="HP:                   10"
                android:textSize="14pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Strength:          10"
                android:textSize="14pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Defense:          10"
                android:textSize="14pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Magic:              10"
                android:textSize="14pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Magic Def:       10"
                android:textSize="14pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Agility:              10"
                android:textSize="14pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>
