<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jonathanmanos.stepman.MainTabbedActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/mytextview"
            android:text="\nWelcome, "
            android:textSize="14pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="\n"
            android:textSize="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50pt"
            android:src="@drawable/stepmanrunning"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <TextView
            android:text="\n"
            android:textSize="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mystepview"
            android:text="Steps: 0\n"
            android:textSize="20pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mylevelview"
            android:text="Level: 1"
            android:textSize="20pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="\n"
            android:textSize="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="HP:                   10"
            android:textSize="14pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
